{
    "name": "ostark/testkit",
    "description": "Testkit for Craft plugins and modules",
    "type": "library",
    "keywords": [
        "craftcms",
        "package-testing",
        "mock",
        "testing"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Oliver Stark",
            "email": "os@fortrabbit.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "craftcms/cms": "^3.5.0",
        "mockery/mockery": "^1.4",
        "pestphp/pestphp": "^1.3",
        "pestphp/pest-plugin-parallel": "^1.0",
        "spatie/pest-plugin-snapshots": "^1.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.4",
        "pestphp/pestphp": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "ostark\\TestKit\\": "src/"
        },
        "files": [
          "src/Fakes/helpers.php"
        ]
    },

    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan analyse src -c phpstan.neon",
        "test": "vendor/bin/pest"
    }
}
